<UIElements name="HUD">
	<UIElement name="pause_menu" mouseevents="1" cursor="1">
		<GFx file="pause_menu.gfx" layer="1">
			<Constraints>
				<Align mode="dynamic" valign="center" halign="center"/>
			</Constraints>
		</GFx>
		<events>
			<event name="OnResumeGame" fscommand="ResumeGame" desc="Start the Game"/>
			<event name="OnReturnMainMenu" fscommand="ReturnMainMenu" desc="Allow User return to Main Menu"/>
			<event name="OnQuitGame" fscommand="QuitGame" desc="Allow User to Quit Game"/>
		</events>
	</UIElement>
</UIElements>